<wxs src="../../wxs/price.wxs" module="p"/>
<view data-pid="{{data.id}}" bind:tap="onItemTap" class="container">
  <image bind:load="onImgLoad" style="width:{{w}}rpx;height:{{h}}"  class="img" src="{{data.img}}"></image>
  <view class="content-container">
    <text class="title">{{data.title}}</text>
    <view class="tags">
      <block wx:for="{{tags}}" wx:key="index">
        <l-tag l-class="l-tag" size="super-mini">{{item}}</l-tag>
      </block>
    </view>
    <view class="price-row">
      <l-price color="#157658" value-size="28" unit-size="20" autofix 
      value="{{p.mainPrice(data.price,data.discount_price).price}}"></l-price>
      <l-price wx:if="{{p.slashedPrice(data.price,data.discount_price).display}}" 
      color="#999" value-size="26" l-class="discount-price" deleted 
      value="{{p.slashedPrice(data.price,data.discount_price).price}}"></l-price>
    </view>

    <text>{{data.subtitle}}</text>
  </view>
</view>