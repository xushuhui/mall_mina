.container{
    box-sizing: border-box;
    padding: 30rpx;
    background-color: #fff;
}
.sku-preview{
    display: flex;
    flex-direction: row;
}
.sku-img{
    width: 160rpx;
    height: 160rpx;
}
.sku-description{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 40rpx;
}
.price-row{
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.discount-price{
    margin-left: 20rpx;
}
.sku-pending{
    font-size: 20rpx;
}
.hr{
      margin-top: 30rpx;
      width: 690rpx;
      height: 2rpx;
      background-color: #e9e9e9;
  }
  .stock{
       margin-left: 30rpx;
       font-size: 20rpx;
       color: #999;
  }
  .stock-pinch{
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #d20109;
  }
  .counter-container{
      margin-top: 34rpx;
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 200rpx;
  }
  .counter-container text{
      color: #555;
      font-size: 24rpx;
  }
